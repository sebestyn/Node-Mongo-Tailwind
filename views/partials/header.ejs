        <!--Every page scripts-->
        <script>
            // Dark mode
            toggleDarkMode()
            // iOS "previous page" -> reload the full page (bug fixes)
            if(is_iOS){
                window.addEventListener("pageshow", function(evt){
                    if(evt.persisted) setTimeout(()=>{window.location.reload();},5);
                }, false);
            }
            // Offline message popup 
            window.addEventListener("load", () => {
                const no_internet_toast = Swal.mixin({
                    icon: 'error',
                    title: 'Check your internet connection',
                    toast: true,
                    position: 'top-start',
                    showConfirmButton: false,
                })
                if (!navigator.onLine) {
                    no_internet_toast.fire();
                }
                function handleNetworkChange(event) {
                    if (navigator.onLine) {
                        no_internet_toast.close()
                    } else {
                        no_internet_toast.fire();
                    }
                }
                window.addEventListener("online", handleNetworkChange);
                window.addEventListener("offline", handleNetworkChange);
            });            
        </script>

